@model HospitalManagementSystem.ViewModels.PatientDetailsViewModel

@{
    ViewData["Title"] = "Delete Patient Profile";
}

<div class="card p-4 mx-auto" style="max-width: 700px;">
    <h1 class="text-center mb-4 display-4 font-weight-bold">
        Delete <span class="text-danger">Patient Profile</span>
    </h1>

    <div class="alert alert-danger mb-4" role="alert">
        <strong>Warning!</strong> Are you sure you want to delete your profile and associated user account? This action cannot be undone.
    </div>

    @* Optional: You can include an asp-validation-summary here if you expect model-level errors not tied to specific fields *@
    <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4" role="alert"></div>

    <dl class="row mb-4">
        <dt class="col-sm-4">Patient ID:</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.PatientId)</dd>

        <dt class="col-sm-4">Identity Username:</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.IdentityUserName)</dd>

        <dt class="col-sm-4">Name:</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>

        <dt class="col-sm-4">Date of Birth:</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.DateOfBirth)</dd>

        <dt class="col-sm-4">Gender:</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.Gender)</dd>

        <dt class="col-sm-4">Contact Number:</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.ContactNumber)</dd>

        <dt class="col-sm-4">Address:</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.Address)</dd>

        <dt class="col-sm-4">Medical History:</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.MedicalHistory)</dd>
    </dl>

    <form asp-action="DeleteProfile" method="post" class="d-flex justify-content-between align-items-center mt-4">
        <input type="hidden" asp-for="PatientId" />
        <button type="submit" class="btn btn-danger btn-lg">
            <i class="bi bi-trash-fill me-2"></i> Delete My Profile
        </button>
        <a href="/Patient/MyProfile" class="btn btn-link text-decoration-none">Cancel</a>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}