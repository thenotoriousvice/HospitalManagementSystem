@{
    ViewData["Title"] = "Appointments";
}

<div class="container mt-5">
    <h1 class="mb-4 fs-3 fw-bold text-primary">Appointments</h1>
    <hr class="mb-5" />

    <div class="row justify-content-center g-4">
        <!-- Book Appointment Card -->
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-sm rounded-lg h-100 text-center d-flex flex-column justify-content-between">
                <div class="card-body p-4">
                    <i class="fas fa-calendar-plus fa-4x text-primary mb-3"></i>
                    <h5 class="card-title fw-bold fs-4">Book New Appointment</h5>
                    <p class="card-text text-muted">Schedule your next medical consultation or check-up with ease.</p>
                </div>
                <div class="card-footer bg-transparent border-top-0 pt-0 pb-4">
                    <a asp-controller="Appointment" asp-action="Book" class="btn btn-primary btn-lg rounded-pill px-5 shadow">Book Now</a>
                </div>
            </div>
        </div>

        <!-- View Appointments Card -->
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-sm rounded-lg h-100 text-center d-flex flex-column justify-content-between">
                <div class="card-body p-4">
                    <i class="fas fa-calendar-check fa-4x text-success mb-3"></i>
                    <h5 class="card-title fw-bold fs-4">View My Appointments</h5>
                    <p class="card-text text-muted">Review your upcoming, past, and cancelled appointments.</p>
                </div>
                <div class="card-footer bg-transparent border-top-0 pt-0 pb-4">
                    <a asp-controller="Appointment" asp-action="ViewAll" class="btn btn-success btn-lg rounded-pill px-5 shadow">View All</a>
                </div>
            </div>
        </div>
    </div>

    <div class="text-center mt-5">
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary btn-lg shadow">Back to Home</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
