@model IEnumerable<HospitalManagementSystem.Repository.Models.Patient>

@{
    ViewData["Title"] = "All Patients";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-5 text-primary fw-bold">
            <i class="fas fa-users-cog me-2"></i> All Patients
        </h1>
        @* <a href="/Patient/Register" class="btn btn-primary btn-lg shadow-sm rounded-pill px-4 py-2">
            <i class="fas fa-user-plus me-2"></i> Register New Patient
        </a> *@
    </div>

    <div class="card shadow-lg border-0 rounded-4 mb-4">
        <div class="card-body p-4">
            <div class="table-responsive">
                <table class="table table-hover table-striped table-bordered align-middle text-center">
                    <thead style="background-color: #2962FF; color: white;">
                        <tr>
                            <th scope="col">Patient ID</th>
                            <th scope="col">Identity User</th>
                            <th scope="col">Name</th>
                            <th scope="col">Date of Birth</th>
                            <th scope="col">Gender</th>
                            <th scope="col">Contact Number</th>
                            <th scope="col">Address</th>
                            <th scope="col">Medical History</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.PatientId)</td>
                                <td>@Html.DisplayFor(modelItem => item.IdentityUser.UserName)</td>
                                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                <td>@Html.DisplayFor(modelItem => item.DateOfBirth)</td>
                                <td>@Html.DisplayFor(modelItem => item.Gender)</td>
                                <td>@Html.DisplayFor(modelItem => item.ContactNumber)</td>
                                <td>@Html.DisplayFor(modelItem => item.Address)</td>
                                <td>@Html.DisplayFor(modelItem => item.MedicalHistory)</td>
                                <td>
                                    <div class="d-flex justify-content-center gap-2">
                                        <a href="/Patient/UpdateProfile/@item.PatientId" class="btn btn-info" title="Edit Profile">
                                            <i class="fas fa-edit"></i> Edit
                                        </a>
                                        <a href="/Patient/MyProfile?id=@item.PatientId" class="btn btn-primary" title="View Details">
                                            <i class="fas fa-info-circle"></i> Details
                                        </a>
                                        <a href="/Patient/DeleteProfile/@item.PatientId" class="btn btn-danger" title="Delete Profile">
                                            <i class="fas fa-trash-alt"></i> Delete
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>