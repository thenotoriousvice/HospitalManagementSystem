@model HospitalManagementSystem.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Admin Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var returnUrl = ViewData["ReturnUrl"] as string;
}

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - HospitalManagementSystem</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800;900&family=Montserrat:wght@400;500;600;700;800;900&display=swap" rel="stylesheet">

</head>
<body>
    <div class="login-page-container">
        <div class="login-content-container">
            <div class="col-md-6 login-image-section d-none d-md-flex">
                <div class="decorative-text fs-2">
                    Dedicated Access for Healthcare Administrators
                </div>

                <img src="~/uploads/hospital.png" class="lady-doctor-img" alt="Lady Doctor" />
            </div>

            <div class="col-md-6 login-form-section">
                <h1><i class="fas fa-user-shield me-2"></i>Admin Login</h1>
                <hr />
                <div class="row">
                    <div class="col-md-12">
                        <form asp-controller="Admin" asp-action="Login" asp-route-returnurl="@returnUrl" method="post">
                            <div asp-validation-summary="All" class="text-danger mb-3"></div>

                            <div class="form-group mb-3">
                                <label asp-for="ContactNumberOrEmail" class="control-label">Username/Email:</label>
                                <input asp-for="ContactNumberOrEmail" class="form-control" placeholder="Enter Admin Username or Email" />
                                <span asp-validation-for="ContactNumberOrEmail" class="text-danger small mt-1"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="Password" class="control-label">Password:</label>
                                <input asp-for="Password" type="password" class="form-control" placeholder="Enter Password" />
                                <span asp-validation-for="Password" class="text-danger small mt-1"></span>
                            </div>

                            <div class="form-group form-check mb-3">
                                <input asp-for="RememberMe" type="checkbox" class="form-check-input" id="rememberMe" />
                                <label class="form-check-label" for="rememberMe">Remember me?</label>
                            </div>

                            <div class="form-group mb-3 d-flex justify-content-center mt-4">
                                <button type="submit" class="btn btn-primary btn-lg shadow">Log in</button>
                                <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary btn-lg shadow ms-2">Back to Home</a>
                            </div>
                        </form>
                    </div>
                </div>

                <div class="text-center mt-4">
                    <p>Forgot your password? <a asp-action="ForgotPassword" asp-controller="Admin">Click here</a>.</p>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>