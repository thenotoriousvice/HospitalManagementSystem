@model HospitalManagementSystem.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Doctor Login";
    var returnUrl = ViewData["ReturnUrl"] as string;
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white text-center">
                    <h3 class="mb-0">Doctor Login</h3>
                </div>
                <div class="card-body">
                    <form asp-controller="Doctor" asp-action="Login" asp-route-returnurl="@returnUrl" method="post">
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="ContactNumberOrEmail" class="form-label"></label>
                            <input asp-for="ContactNumberOrEmail" class="form-control" placeholder="Enter Doctor Username or Email" />
                            <span asp-validation-for="ContactNumberOrEmail" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label"></label>
                            <input asp-for="Password" type="password" class="form-control" placeholder="Enter Password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="mb-3 form-check">
                            <input asp-for="RememberMe" type="checkbox" class="form-check-input" />
                            <label asp-for="RememberMe" class="form-check-label"></label>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-info btn-lg">Log in</button>
                        </div>

                        <div class="text-center mt-3">
                            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary btn-sm">Back to Home</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
